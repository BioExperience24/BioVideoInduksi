@page
@model CleanArchitecture.Pages.Login.Index

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Video Induksi CMS</title>

    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/theme/images/icon-pama.png">

    <!-- Custom Stylesheet -->
    <link href="~/theme/css/style.css" rel="stylesheet">

</head>

<body class="h-100" data-baseurlapi="@ViewData["BaseUrlApi"]">
    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>

    <div class="login-form-bg h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100">
                <div class="col-xl-6">
                    <div class="form-input-content">
                        <div class="card login-form mb-0">
                            <div class="card-body pt-5">
                                <div class="text-center">
                                    <img src="~/theme/images/logo-pama1.png" style="width: 20%" class="img-fluid">
                                </div>

                                <form class="mt-3 mb-5 login-input">
                                    <div class="form-group">
                                        <input type="username" class="form-control" id="username" placeholder="Username"
                                            autocomplete="off">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" id="password" placeholder="Password"
                                            autocomplete="off">
                                    </div>
                                    <button type="button" class="btn login-form__btn submit w-100" onclick="login()">
                                        <i class="fa fa-sign-in"></i> SIGN IN
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery Core Js -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Core Js -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- Core JS -->
    <script src="~/theme/plugins/common/common.min.js"></script>
    <script src="~/theme/js/custom.min.js"></script>
    <script src="~/theme/js/settings.js"></script>
    <script src="~/theme/js/gleek.js"></script>
    <script src="~/theme/js/styleSwitcher.js"></script>

    <!-- Additional JS -->
    <script src="~/js/sweetalert.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('#username').focus();
        })
    </script>
</body>

</html>